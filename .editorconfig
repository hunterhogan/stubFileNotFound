# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
charset						= utf-8
end_of_line					= lf
indent_size					= tab
indent_style				= tab
insert_final_newline		= true
max_line_length				= 140
spelling_language			= en-US
tab_width					= 4
trim_trailing_whitespace	= true

[*.md,*.toml,*.yml]
charset						= utf-8
end_of_line					= lf
indent_size					= 2
indent_style				= space
insert_final_newline		= true
max_line_length				= 120
spelling_language			= en-US
tab_width					= 2
trim_trailing_whitespace	= true
